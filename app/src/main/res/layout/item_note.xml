<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defalult_margin"
        android:layout_marginTop="@dimen/defalult_margin"
        android:layout_marginEnd="@dimen/defalult_margin"
        android:layout_marginBottom="@dimen/defalult_margin"
        android:maxWidth="250dp"
        android:maxLines="3"
        android:text="Word"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/defalult_margin"
        android:layout_toEndOf="@id/tv_content"
        android:text="Phrasal Verb"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginStart="@dimen/defalult_margin"
        android:maxLines="5"
        android:text="mean"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_meaning"
        android:background="@color/blue">
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionFragment.ListeningFragment"
    android:orientation="vertical">


    <SeekBar
        android:id="@+id/seek_bar_timer"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question display here"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/answer_a"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="answer A"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/answer_b"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/answer_a"
            android:text="answer B"/>

        <Button
            android:id="@+id/answer_c"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer_a"
            android:layout_marginRight="20dp"
            android:text="answer C"/>

        <Button
            android:id="@+id/answer_d"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/answer_c"
            android:layout_below="@id/answer_b"
            android:text="answer D"/>
    </RelativeLayout>

</LinearLayout>
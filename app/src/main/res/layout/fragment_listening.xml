<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionFragment.ListeningFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_play_audio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_play_audio" />
        <SeekBar
            android:id="@+id/seek_bar_timer"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/defalult_margin"
            android:layout_toEndOf="@id/btn_play_audio"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Question number 1"/>
            <include layout="@layout/item_multiple_choice_answer"
                android:id="@+id/multiple_choice1"/>

            <TextView
                android:id="@+id/tv_question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Question number 2"/>
            <include layout="@layout/item_multiple_choice_answer"
                android:id="@+id/multiple_choice2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Question number 3"
                android:id="@+id/tv_question3"/>
            <include layout="@layout/item_multiple_choice_answer"
                android:id="@+id/multiple_choice3"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
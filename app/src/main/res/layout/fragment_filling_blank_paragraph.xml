<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionFragment.FillingBlankParagraphFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="20"
        android:text="paragraph_displays_here \n\n\n\n\n\n\n\n\n\n\n\n"
        android:layout_marginBottom="@dimen/text_margin"
        android:layout_margin="@dimen/defalult_margin"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Question number 1"/>
        <include layout="@layout/item_multiple_choice_answer"
            android:id="@+id/multiple_choice1"/>

        <TextView
            android:id="@+id/tv_question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Question number 2"/>
        <include layout="@layout/item_multiple_choice_answer"
            android:id="@+id/multiple_choice2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Question number 3"
            android:id="@+id/tv_question3"/>
        <include layout="@layout/item_multiple_choice_answer"
            android:id="@+id/multiple_choice3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Question number 4"
            android:id="@+id/tv_question4"/>
        <include layout="@layout/item_multiple_choice_answer"
            android:id="@+id/multiple_choice4"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>